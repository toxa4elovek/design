<?xml version="1.0" encoding="utf-8"?>
<!--Корневой элемент, указание XML-схемы и пространства имен.-->
<site xmlns="http://interactive-answers.webmaster.yandex.ru/schemas/site/0.0.1"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://interactive-answers.webmaster.yandex.ru/schemas/site-0.0.1.xsd">

    <!--Краткое название сайта, используется в заголовке формы.-->
    <title>GoDesigner.ru</title>

    <!--Ссылка, которую следует использовать, если для данного набора фильров невозможно построить URL.-->
    <rootUrl>http://www.godesigner.ru/pitches/create</rootUrl>

    <!--Протокол для адреса страницы. Поддерживается два значения: «HTTP» и «HTTPS». Необязательный элемент,
     по умолчанию используется протокол HTTP.-->
    <protocol>HTTP</protocol>

    <description>Лого, сайт и дизайн от всего креативного интернет сообщества</description>

    <requestMethod>GET</requestMethod>

    <!--Корневой элемент структуры адресов.-->
    <resource>

            <!--Вторая часть URL — домен сайта, всегда один и тот же.-->
            <fixed name="godesigner.ru">

                <!--Каталог верхнего уровня для информации о дилерах данного производителя.-->
                <fixed name="pitches">
                    <fixed name="brief">
                        <fixed name="1">
                        </fixed>
                    </fixed>
                </fixed>
            </fixed>
    </resource>
    <filters>
        <!--Атрибут type указывает, что текстовое поле должно быть по умолчанию заполнено
    самой длинной непрерывной последовательностью слов запроса, не соответствующих фильтрам.-->
        <textBox type="NoFilling">

            <!--Подпись к текстовому полю задана атрибутом caption.-->
            <description caption="Название питча">

                <!--Имя CGI-параметра для передачи содержимого текстового поля задано атрибутом name.-->
                <setParameter name="name" />
            </description>
            </textBox>

        <textBox type="NoFilling">
            <description caption="Награда дизайнера">

                <!--Имя CGI-параметра для передачи содержимого текстового поля задано атрибутом name.-->
                <setParameter name="award" />
            </description>
        </textBox>
            <checkBox>
                <description caption="Заполнить бриф">
                    <setParameter name="fillBrief"/>
                </description>
                <checked key="true" default="true"/>
                <unchecked key="false" />
            </checkBox>

    </filters>
</site>